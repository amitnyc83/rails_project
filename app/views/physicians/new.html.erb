<h1>Physician Sign Up Page</h1>

<%= form_for @physician do |f| %>

<%= render :partial => "form", :locals => { :physician => @physician, :f => f} %>

<%= f.label :password %>
<%= f.password_field :password %>
<br>
<% if @physician.errors[:password].any? %>
<p><%= @physician.errors.full_messages_for(:password)[0] %></p>
<br>
<% end %>

<%= f.submit "Signup" %>
<% end %>

<p><%= link_to('Sign Up with Facebook!', '/auth/facebook') %></p>
<h3>Click to go <%= link_to "Back", root_path, class:"btn btn-primary btn-light" %> to Welcome page</h3>
